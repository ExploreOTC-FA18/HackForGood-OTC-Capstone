<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BorrowMyAngel.View.LoginScreen"
             BackgroundColor="{StaticResource BackgroundColor}"
             Title="Login">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="50">
            <Label Text="Email Address"
                HorizontalTextAlignment="Start"/>
            <Entry x:Name="email" 
                   Placeholder=""
                   MaxLength="200"/>
            <Label x:Name="password" 
                   Text="Password"
                   HorizontalTextAlignment="Start"/>
            <Entry Placeholder=""
                   IsPassword="True"
                   MaxLength="100"/>
            <Button 
                Text="Login"
                BackgroundColor="{StaticResource PrimaryFocus}"
                HorizontalOptions="FillAndExpand"
                TextColor="White"
                Clicked="SubmitClicked" />
            <Button Text="Forgot Password?"
                    BackgroundColor="{StaticResource BackgroundColor}"
                    TextColor="Black"
                    HorizontalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
