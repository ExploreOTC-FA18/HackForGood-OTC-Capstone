<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BorrowMyAngel.View.AccountCreationScreen"
             BackgroundColor="{StaticResource BackgroundColor}">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            <ScrollView VerticalOptions="FillAndExpand">
                <StackLayout VerticalOptions="Center" Padding="30">
                    <Label Text="CREATE ACCOUNT"
                        VerticalOptions="CenterAndExpand" 
                        HorizontalOptions="CenterAndExpand" 
                        TextColor="White"/>
                    <Label Text="Email Address"
                           HorizontalTextAlignment="Start"
                           TextColor="White"/>
                    <Entry x:Name="email" 
                           Placeholder=""
                           MaxLength="200" 
                           TextColor="White"/>
                    <Label Text="Password"
                            HorizontalTextAlignment="Start" 
                            TextColor="White"/>
                    <Entry x:Name="password"
                            Placeholder=""
                            MaxLength="100" 
                            TextColor="White"/>
                    <Label Text=" Re-Enter Password"
                           HorizontalTextAlignment="Start" 
                            TextColor="White"/>
                    <Entry x:Name="passwordVerify"
                           Placeholder=""
                           MaxLength="100" 
                            TextColor="White"/>
                    <Label Text="OPTIONAL"
                           VerticalOptions="CenterAndExpand" 
                           HorizontalTextAlignment="Start"
                           TextColor="#3E3E42"
                           FontSize="12"
                           Margin="0,20,0,0"/>
                    <BoxView 
                        HeightRequest="1"
                        BackgroundColor="{StaticResource Muted}">
                    </BoxView>
                    <Label Text="First Name"
                           HorizontalTextAlignment="Start" 
                           TextColor="White"
                           Margin="0, 20, 0, 0"/>
                    <Entry x:Name="firstName"
                           Placeholder=""
                           MaxLength="100" 
                            TextColor="White"/>
                    <Label Text="NickName"
                           HorizontalTextAlignment="Start"
                           TextColor="White"/>
                    <Entry x:Name="nickname"
                           Placeholder=""
                           MaxLength="100"
                           TextColor="White"/>
                    <Label Text="Age"
                           HorizontalTextAlignment="Start"
                           TextColor="White"/>
                    <Entry x:Name="age"
                           Placeholder=""
                           MaxLength="4"
                           TextColor="White"/>
                    <Label Text="Gender"
                           HorizontalTextAlignment="Start"
                           TextColor="White"/>
                    <Picker x:Name="genderPicker"/>
                    <Label Text="City"
                           HorizontalTextAlignment="Start"
                           TextColor="White"/>
                    <Entry x:Name="city"
                           Placeholder=""
                           HorizontalTextAlignment="Start"
                           TextColor="White"/>
                    <Label Text="State"
                           HorizontalTextAlignment="Start"
                           TextColor="White"/>
                    <Picker x:Name="statePicker"/>
                </StackLayout>
            </ScrollView>
            <Button
                Text="Submit"
                BackgroundColor="{StaticResource PrimaryFocus}"
                BorderRadius="0"
                VerticalOptions="End"
                HorizontalOptions="FillAndExpand"
                TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>