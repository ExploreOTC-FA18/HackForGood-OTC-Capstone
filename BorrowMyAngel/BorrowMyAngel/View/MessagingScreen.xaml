<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BorrowMyAngel.View.MessagingScreen">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand">
            <StackLayout Orientation="Horizontal" 
                         Padding="10" 
                         BackgroundColor="#3a3a3a"
                         VerticalOptions="Start">
                <Button Image="HamburgerMenu.png" 
                        WidthRequest="48" 
                        HeightRequest="48"/>
                <Label Text="Your Angel" FontSize="20" TextColor="#ededed"
                       Margin="0, 10, 0, 0"/>
            </StackLayout>
            <ScrollView VerticalOptions="CenterAndExpand">
                <StackLayout x:Name="layoutMessages" VerticalOptions="CenterAndExpand" BackgroundColor="{StaticResource Muted}">
                    
                </StackLayout>
            </ScrollView>
            <StackLayout Orientation="Horizontal">
                <Entry x:Name="entryMessage" VerticalOptions="End" HorizontalOptions="FillAndExpand"/>
                <Button Text="Send" Clicked="SendMessage" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>